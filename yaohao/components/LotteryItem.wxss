.lottery_item_box {
    overflow: hidden;
    position: relative;
}

.lottery_item_box .lottery_item_comment {
    float: right;
}

.lottery_item_box .lottery-item-count {
    position: absolute;
    bottom: 32rpx;
    right: 130rpx;
    padding-left: 10rpx;
    z-index: 9;
}

.weui-media-box {
    position: relative;
    z-index: 1;
    margin: 0 30rpx;
    padding: 30rpx 0;
    box-sizing: border-box;
    border-bottom: 2rpx solid #f2f2f2;
}

.weui-media-box__title {
    position: relative;
    line-height: 1;
    overflow: hidden;
}

.weui-media-box__title .left {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: break-word;
    word-break: break-all;
    margin-right: 200rpx;
}

.weui-media-box__title .right {
    float: right;
}

.weui-media-box__title .right .height-level-color {
    font-weight: normal;
}

.weui-media-box__title .right .square {
    position: relative;
    top: -3px;
}

.tag {
    font-size: 20rpx;
    line-height: 34rpx;
    padding: 0 10rpx;
    height: 36rpx;
    overflow: hidden;
    color: #1f9f55;
    background-color: #e6fbef;
    border: 0;
}

.weui-media-box {
    display: flex;
}

.weui-media-box__bd {
    margin-left: 30rpx;
}

.lottery_content {
    display: flex;
    align-items: center;
}

.title_name {
    width: 250rpx;
}

.hot_house_img {
    float: left;
    width: 210rpx;
    height: 140rpx;
    position: relative;
}

.hot_house_img .lottery-img {
    display: block;
    width: 210rpx;
    height: 140rpx;
    position: absolute;
    z-index: 1;
    top: 0;
}

.hot_house_img .lottery-img-bottom {
    display: block;
    width: 100rpx;
    height: 30rpx;
    background-color: #f07062;
    line-height: 30rpx;
    text-align: center;
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
}

.hot_house_img .view {
    position: absolute;
    bottom: 0;
    left: 10rpx;
    z-index: 3;
}

.hot_house_img .view>text {
    vertical-align: middle;
}

.gray-shadow {
    position: absolute;
    width: 100%;
    height: 120rpx;
    bottom: 0;
    left: 0;
    z-index: 2;
    background: linear-gradient(to top,rgba(0,0,0,0.7) 0%,transparent 30%);
}