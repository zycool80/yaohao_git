page {
    background: #f7f7f7;
    width: 100%;
}

.myTopInfo {
    padding: 35rpx 30rpx 90rpx;
    overflow: hidden;
    position: relative;
    background: #2d8cf0;
}

.myTopInfo .left-avatar {
    margin-right: 130rpx;
}

.myTopInfo .left-avatar .name {
    margin-left: 28rpx;
    line-height: 90rpx;
    display: inline-block;
    background: transparent;
}

.myTopInfo .signIn {
    position: absolute;
    border-radius: 25rpx;
    top: 67rpx;
    right: 122rpx;
    text-align: center;
    background: #6db4f6;
}

.myTopInfo .signIn button {
    border-radius: 25rpx;
    height: 50rpx;
    line-height: 50rpx;
    width: 120rpx;
    text-align: center;
    background: #6db4f6;
}

.myTopInfo .share {
    position: absolute;
    right: 0;
    top: 67rpx;
    height: 50rpx;
    line-height: 50rpx;
    width: 110rpx;
    text-align: center;
    border-radius: 25rpx 0 0 25rpx;
    background: #6db4f6;
}

.myTopInfo .signIn button text,.myTopInfo .share text {
    vertical-align: middle;
}

.myTopInfo .left-avatar .avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
    border: 1rpx solid #fff;
    float: left;
    box-sizing: border-box;
}

.myTopInfo .left-avatar .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.main-cont {
    margin: 0 30rpx;
    overflow: hidden;
    position: relative;
    top: -50rpx;
}

.card_line {
    padding: 30rpx 0;
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
}

.card_line .card_line1 {
    overflow: hidden;
    padding: 0 10rpx;
}

.card_line .line {
    width: 25%;
    float: left;
    text-align: center;
    line-height: 1;
    overflow: hidden;
    background: transparent;
    position: relative;
}

.card_line .line image {
    width: 100%;
    height: 63rpx;
    overflow: hidden;
}

.card_line .line .text {
    line-height: 1;
}

.card_line2 {
    background: #f7ebdb;
}

.card_line .title {
    padding: 0 40rpx 30rpx;
    overflow: hidden;
}

.card_line .cont {
    line-height: 1.8;
    padding: 0 40rpx;
}

.card_line .title .left {
    float: left;
}

.card_line .title .right {
    color: #c57e3f;
    float: right;
}

.red-circle {
    position: absolute;
    right: 45rpx;
    top: 4rpx;
    width: 12rpx;
    height: 12rpx;
    display: inline-block;
    border-radius: 12rpx;
    z-index: 222;
    background: #e2572c;
}

.nextStep {
    position: fixed;
    bottom: 124rpx;
    left: 50%;
    margin-left: -150rpx;
    z-index: 1999;
}

.guide-bg {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.6);
    position: fixed;
}

.guide-bg image {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 999;
}