@import "../../__wuBaseWxss__/2.wxss";

.search-bar {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 50px;
    box-sizing: border-box;
    padding: 8px 30rpx 0;
    background-color: #2d8cf0;
    z-index: 999;
}

.search-bar .search-btn {
    width: 78rpx;
    line-height: 64rpx;
    text-align: right;
    float: right;
    overflow: hidden;
}

.search-bar .search-bar-form {
    margin-right: 78rpx;
    overflow: hidden;
}

.search-bar .search-bar-form .serach-icon {
    float: left;
    display: inline-block;
    height: 64rpx;
    margin-left: 20rpx;
    line-height: 64rpx;
}

.search-bar .search-bar-form .ui-input {
    padding-left: 70rpx;
    height: 64rpx;
    line-height: 64rpx;
}

.banner {
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}

.banner swiper-item {
    position: relative;
    z-index: 22;
}

.banner .advert {
    font-size: 18rpx;
    line-height: 26rpx;
    text-align: center;
    background: rgba(0,0,0,0.3);
    width: 50rpx;
    height: 26rpx;
    position: absolute;
    right: 20rpx;
    bottom: 15rpx;
    z-index: 222;
    border-radius: 1rpx;
    opacity: .4;
}

.project-nav {
    width: 100%;
    background-color: #fff;
    overflow: hidden;
}

.project-nav .project-nav-cont {
    width: 100%;
    border-bottom: 1rpx solid #e6e6e6;
    overflow: hidden;
    background-color: #fff;
}

.project-nav .project-nav-cont .item {
    float: left;
    width: 25%;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    box-sizing: border-box;
    text-align: center;
    position: relative;
}

.project-nav .project-nav-cont .item text {
    color: #999;
    font-weight: bold;
}

.project-nav .project-nav-cont .item.active text {
    color: #2d8cf0;
}

.project-nav .project-nav-cont .item.active text:after {
    position: absolute;
    display: block;
    content: '';
    width: 50%;
    bottom: 0;
    left: 50%;
    -webkit-transform: translateX(-50%);
    height: 6rpx;
    background-color: #2d8cf0;
}

.project-nav .project-menu-cont {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    background-color: #fff;
    display: -webkit-flex;
    -webkit-flex-direction: row;
    -webkit-justify-content: space-between;
}

.project-nav .project-menu-cont .menu-select {
    display: -webkit-flex;
    -webkit-flex-direction: row;
    -webkit-justify-content: center;
    -webkit-align-items: center;
    height: 80rpx;
    overflow: hidden;
}

.project-nav .project-menu-cont .menu-select>text {
    line-height: 1;
}

.project-nav .project-menu-cont .menu-select>text.iconfont {
    margin-left: 10rpx;
    font-size: 16rpx;
}

.project-nav .project-menu-cont .menu-select>text.icon-paixu {
    margin: 0 20rpx;
}

.project-nav .project-menu-cont .menu-select.active>text {
    color: #2d8cf0!important;
}

.project-nav.fixed-top {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 50px;
    left: 0;
    z-index: 2;
    background-color: rgba(0,0,0,0.5);
}

.project-nav.fixed-top .close-select {
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: transparent;
}

.project-nav.fixed-top .project-nav-cont,.project-nav.fixed-top .project-menu-cont {
    position: relative;
    z-index: 2;
}

.project-select-content {
    width: 100%;
    background-color: #fff;
    overflow: hidden;
}

.project-select-content .select-left-cont {
    position: relative;
    float: left;
    width: 180rpx;
    height: 630rpx;
    overflow: scroll;
    z-index: 2;
}

.project-select-content .select-left-cont .select-item {
    width: 100%;
    line-height: 90rpx;
    height: 90rpx;
    color: #1a1a1a;
    text-indent: 30rpx;
    overflow: hidden;
}

.project-select-content .select-left-cont .select-item.active {
    color: #2d8cf0;
}

.project-select-content .select-right-cont {
    position: relative;
    margin-left: 180rpx;
    height: 630rpx;
    overflow: scroll;
    z-index: 1;
}

.project-select-content .select-right-cont .select-item_list {
    text-indent: 30rpx;
    line-height: 90rpx;
    height: 90rpx;
    border-bottom: 1rpx solid #e6e6e6;
    box-sizing: border-box;
    color: #1a1a1a;
}

.project-select-content .select-right-cont .select-item_title {
    width: 100%;
    height: 80rpx;
    font-size: 26rpx;
    text-indent: 30rpx;
    line-height: 80rpx;
    overflow: hidden;
}

.project-select-content .select-right-cont .select-item_group {
    width: 100%;
    box-sizing: border-box;
    padding-left: 30rpx;
    overflow: hidden;
}

.project-select-content .select-right-cont .select-item_group .select-item_btn {
    float: left;
    width: 148rpx;
    height: 58rpx;
    line-height: 58rpx;
    margin: 0 20rpx 20rpx 0;
    color: #1a1a1a;
    border-radius: 2rpx;
    background-color: #fff;
    text-align: center;
    border: 1rpx solid #fff;
}

.project-select-content .select-right-cont .select-item_group .select-item_btn.active {
    border: 1rpx solid #9acbff;
}

.project-select-content .select-right-cont .active {
    color: #2d8cf0!important;
}

.project-select-content .select-right-cont.no-left-cont {
    margin-left: 0;
}

.project-select-content .select-right-cont.tow-columns .short-column {
    width: 160rpx;
    height: 100%;
    float: left;
    overflow: scroll;
}

.project-select-content .select-right-cont.tow-columns .long-column {
    display: block;
    height: 100%;
    margin-left: 200rpx;
    overflow: scroll;
}

.project-select-content .select-bottom {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 10rpx 30rpx;
}

.project-select-content .select-bottom .select-input {
    float: left;
    width: 335rpx;
    height: 100%;
    border-radius: 10rpx;
    padding: 0 22rpx;
    box-sizing: border-box;
    display: -webkit-flex;
    -webkit-justify-content: space-between;
    -webkit-align-items: center;
}

.project-select-content .select-bottom .select-input input {
    width: 120rpx;
    height: 100%;
    line-height: 100%;
    font-size: 28rpx;
    overflow: hidden;
}

.project-select-content .select-bottom .select-btn {
    width: 335rpx;
    line-height: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    text-align: center;
    background: linear-gradient(to right,#2d8cf3,#1067eb);
    color: #fff;
}

.project-select-content .select-bottom .select-btn.white-style {
    background: #fff;
    box-sizing: border-box;
    border: 1px solid #6f99c4;
    color: #6f99c4;
}

.project-select-content .gray-f7-bg {
    background-color: #f7f7f7;
}

.project-select-content .fz-14 {
    font-size: 28rpx!important;
}

.project-select-content .float_left {
    float: left;
}

.project-select-content .float_right {
    float: right;
}

.project-select_sort {
    height: 520rpx;
}

.project-select_sort .select-right-cont {
    height: 420rpx;
}

.page {
    position: relative;
    z-index: 1;
}

.page .projects {
    padding-top: 20rpx;
    background-color: #fff;
}

.page .projects .not_id_card {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 740rpx;
    width: auto;
    background-color: #fff;
}