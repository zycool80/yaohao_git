@import "../../__wuBaseWxss__/0.wxss";

page {
    background-color: #2b39be;
}

.results {
    position: relative;
}

.results>.top-title {
    position: absolute;
    left: 30rpx;
    top: 5rpx;
    z-index: 2;
}

.results>image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    z-index: -1;
}

.results-box {
    top: 250rpx;
    text-align: center;
    position: relative;
    box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.1);
    border-radius: 25rpx;
    width: 90%;
    margin: 0 auto 45rpx;
    background: #fff;
}

.results-img {
    width: 356rpx;
    left: 50%;
    margin-left: -178rpx;
    height: 90rpx;
    line-height: 90rpx;
    color: #e73e3a;
    font-size: 50rpx;
    background-color: #fde3e2;
    border-bottom-right-radius: 45rpx;
    border-bottom-left-radius: 45rpx;
    position: absolute;
    z-index: 222;
    text-align: center;
}

.image-box image {
    display: inline-block;
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.image-box {
    width: 150rpx;
    height: 150rpx;
    border-radius: 150rpx;
    display: inline-block;
    border: 5rpx solid #fff;
    position: relative;
    z-index: 222;
}

.img-bg {
    width: 150rpx;
    height: 150rpx;
    border-radius: 150rpx;
    border: 1px solid #ddd;
    position: absolute;
    left: 0;
    top: 0;
}

.line-circle {
    width: 100%;
    height: 40rpx;
}

.results-address {
    overflow: hidden;
}

.results-address .lottery-num {
    height: 140rpx;
    padding: 0 64rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 160rpx;
    text-align: center;
}

.results-address .lottery-num>image {
    width: 27rpx;
    height: 100%;
}

.results-address .lottery-num .lottery-num-type {
    display: inline-block;
    font-size: 50rpx;
    line-height: 140rpx;
}

.results-code {
    overflow: hidden;
}

.results-code .results-code-img {
    float: left;
    width: 180rpx;
    height: 210rpx;
    display: inline-block;
    margin: 30rpx 0 50rpx 64rpx;
}

.results-code .results-code-img image {
    width: 180rpx;
    height: 210rpx;
    display: inline-block;
}

.results-code-view {
    padding-bottom: 34rpx;
}

.savePicture {
    float: left;
    margin: 60rpx 0 0 105rpx;
}

.savePicture .saveIcon {
    margin-bottom: 20rpx;
    width: 100rpx;
    line-height: 100rpx;
    text-align: center;
    height: 100rpx;
    border-radius: 100%;
    border: 1px solid #3772cc;
}

.share {
    float: left;
    margin: 60rpx 0 0 95rpx;
}

.share button {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    margin-bottom: 20rpx;
    border-radius: 100%;
    border: 1px solid #e73e3a;
}

.businessCard-bg {
    background: rgba(0,0,0,0.8);
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 995;
}

.share-btn-group {
    text-align: center;
    padding-top: 15rpx;
}