@import "../__wuBaseWxss__/0.wxss";

page {
    height: 90%;
}

.popup {
    height: 100%;
    overflow: hidden;
}

.common-model {
    position: fixed;
    background: #fff;
    border-radius: 10rpx;
    width: 640rpx;
    z-index: 1000;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.model-tip {
    padding: 30rpx 0;
    text-align: center;
}

.model-text1 {
    padding-bottom: 50rpx;
}

.input-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15rpx 0;
}

.common-model-btn {
    display: flex;
    justify-content: space-around;
    border-top: 1rpx solid #e6e6e6;
    height: 90rpx;
}

.common-model-btn button {
    color: #16a5af;
}

.common-model-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    background: rgba(0,0,0,0.5);
    top: 0;
    z-index: 999;
}

.comment-box {
    max-height: 600rpx;
    padding: 0 50rpx;
    box-sizing: border-box;
}

page {
    background: #f9fafc;
}

.statement-all {
    padding-bottom: 30rpx;
    background-color: #f9fafc;
}

.statement-all-top {
    background: #fff;
    padding: 30rpx 10rpx 0 15rpx;
}

.statement-all-top .p {
    padding: 0 20rpx;
    margin: 0 14rpx 10rpx 0;
    line-height: 48rpx;
    height: 65rpx;
    box-sizing: border-box;
    display: inline-block;
    position: relative;
    border-radius: 6rpx;
    color: #999;
    letter-spacing: 1rpx;
    font-size: 29rpx;
}

.statement-all-top .p .span {
    width: 33%;
    height: 7rpx;
    background: #3773cc00 0;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
}

.statement-all-top .active {
    color: #1e81dd;
    font-weight: 600;
}

.statement-all-top .active .span {
    background: #3773cc;
}

.statement-body {
    padding: 15rpx 30rpx 25rpx 40rpx;
}

.statement-body .statement-title {
    font-size: 30rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
}

.statement-body .statement-content {
    line-height: 36rpx;
    display: inline-block;
    font-size: 26rpx;
    color: #666;
    letter-spacing: 1rpx;
}

.statement-body .statement-content.wrap {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.statement-body .statement-dropContent {
    box-sizing: border-box;
    padding-left: 30rpx;
}

.statement-body view:not(.statement-dropContent),.statement-top {
    display: flex;
    justify-content: space-between;
    margin: 15rpx 30rpx;
    align-items: center;
}

.statement-time {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 46rpx;
    margin-left: -5rpx;
}

.statement-time .avatar {
    display: flex;
    align-items: center;
    height: 46rpx;
    margin-left: 16rpx;
    overflow: hidden;
}

.statement-time .avatar image {
    width: 46rpx;
    height: 46rpx;
    border-radius: 100%;
    margin-right: 14rpx;
}

.time {
    padding-left: 20rpx;
}

.footer {
    padding: 17rpx 0 0 0;
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
    box-sizing: border-box;
    justify-content: space-around;
}

.footer navigator,.footer view {
    line-height: 90rpx;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
    width: 100%;
    height: 90rpx;
}

.search-bar-form {
    margin: 0 10rpx 20rpx;
}

.search-bar-input {
    padding-left: 0;
}

.search-bar .search-btn {
    float: right;
    height: 70rpx;
    width: 80rpx;
    line-height: 70rpx;
    text-align: center;
    padding-left: 15rpx;
}

.tabBar {
    display: flex;
    justify-content: space-around;
    overflow: hidden;
    position: fixed;
    background: #fff;
    width: 100%;
    top: 113px;
    z-index: 222;
    border-bottom: 1rpx solid #e2e2e2;
}

.tabBar .tabBar-list {
    display: flex;
    height: 88rpx;
    line-height: 88rpx;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    color: #999;
}

.tabBar .tabBar-list.active {
    position: relative;
    color: #3772cc!important;
}

.tabBar .tabBar-list.active:before {
    position: absolute;
    width: 80rpx;
    height: 6rpx;
    content: '';
    bottom: -1rpx;
    left: 10%;
    background-color: #3772cc;
}

.tabBar .tabBar-list .top {
    font-size: 50rpx;
    margin-bottom: 10rpx;
}

.tabBar .tabBar-list .top,.tabBar .tabBar-list .bottom {
    line-height: 1;
}

.posts {
    overflow: hidden;
}

.imgLayout {
    display: block;
    width: 100%;
    height: 95%;
    background: #f6ecda;
}

.layout1 {
    width: 400rpx;
    overflow: hidden;
    background: #f6ecda;
}

.layout2 {
    background: #f6ecda;
}

.layout2,.layout3 {
    flex: 1;
    overflow: hidden;
    border-radius: 0;
    margin-right: 10rpx;
}

.post-items {
    background: #f2f2f2;
    overflow: hidden;
}

.post-item {
    background: #fff;
    padding: 0 20rpx 20rpx;
    box-sizing: border-box;
}

.post-item.gray-block {
    margin-bottom: 10rpx;
    margin-top: 2rpx;
}

.weui-media-box:before {
    border-top: none;
}

.post-image-wrap {
    padding-right: 12rpx;
    margin-bottom: 12rpx;
    overflow: hidden;
}

.post-image-wrap:last-child {
    padding-right: 0;
}

.header-bar {
    position: relative;
}

.new-post {
    position: absolute;
    right: 0;
    padding-right: 30rpx;
    padding-left: 30rpx;
}

.header-icon {
    position: relative;
    width: 100rpx;
    margin-right: 20rpx;
    float: left;
    z-index: 2;
}

.header-content {
    position: relative;
    z-index: 1;
}

.clearfix:after {
    content: " ";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.clearfix {
    height: 1%;
}

.label {
    color: #fff;
    padding: 0 6px;
    margin-left: 5px;
    font-weight: normal;
    font-size: 13px;
    border-radius: 3px;
}

.label.label-danger {
    background: #ff3600;
}

.create-question {
    position: fixed;
    bottom: 40rpx;
    right: 30rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 45rpx;
    background: rgba(55,114,204,0.8);
    text-align: center;
    border-radius: 100%;
    z-index: 999;
}

.text-content {
    font-size: 28rpx;
    color: #333;
    line-height: 50rpx;
    max-height: 300rpx;
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.post-item-header {
    margin-bottom: 10px;
}

.not_id_card {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 740rpx;
    width: auto;
    background-color: #fff;
}

.posts-menu {
    width: 100%;
    padding: 40rpx 0;
    overflow: hidden;
}

.posts-menu .posts-menu-list {
    display: flex;
    flex-direction: column;
    float: left;
    align-items: center;
    width: 25%;
    overflow: hidden;
}

.posts-menu .posts-menu-list .icon {
    width: 45rpx;
    height: 45rpx;
    margin-bottom: 20rpx;
}

.post-items .comment,.post-items .like,.post-items .see,.post-items .share {
    display: flex;
    height: 34rpx;
    justify-content: center;
    position: absolute;
    bottom: 0;
    line-height: 1;
}

.post-items .comment .text,.post-items .like .text,.post-items .see .text,.post-items .share .text {
    line-height: 1;
}

.post-items .comment .iconfont,.post-items .like .iconfont,.post-items .see .iconfont,.post-items .share .iconfont {
    display: inline-block;
    line-height: 1;
}

.post-items .share {
    line-height: 1;
    background-color: transparent;
    right: 0;
}

.post-items .see {
    right: 8%;
}

.post-items .like {
    right: 28%;
}

.post-items .comment {
    right: 48%;
}

.post-item-body {
    margin-left: 120rpx;
}

.header-content-guanzhu {
    padding: 5rpx 25rpx;
    border-radius: 30rpx;
    border: 1rpx solid #3772cc;
    position: absolute;
    right: 0;
    top: 35rpx;
    color: #3772cc;
}

.header-content-yiguanzhu {
    padding: 10rpx 25rpx;
    border-radius: 30rpx;
    background: #f7f7f7;
    position: absolute;
    right: 0;
    top: 35rpx;
    color: #ccc;
    z-index: 10;
}

.img-box {
    width: 100%;
}

.img-box image {
    width: 100%;
    height: 100%;
}

.img-smallBox image {
    display: block;
    width: 100%;
    height: 100%;
    margin-bottom: 10rpx;
}

.attention {
    float: right;
}

.attention .guanzhu {
    height: 40rpx;
    padding: 0 15rpx;
    line-height: 40rpx;
    border: 1rpx solid #3772cc;
    border-radius: 33rpx;
    color: #3772cc;
    display: inline-block;
}

.attention .yiguanzhu {
    height: 40rpx;
    padding: 0 15rpx;
    line-height: 40rpx;
    background: #f7f7f7;
    border-radius: 15rpx;
    display: inline-block;
    color: #ccc;
}

.attention .other {
    padding-left: 25rpx;
    color: #b3b3b3;
}

.share-line {
    display: flex;
    justify-content: space-between;
    padding: 45px 30rpx 0;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 15rpx solid #f7f7f7;
}

.sealma-style {
    width: 690rpx!important;
}

.userName {
    color: #999;
    font-size: 24rpx;
}