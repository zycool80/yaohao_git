.news-container-tow {
    position: relative;
    width: 100%;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #d6d6d6;
    overflow: hidden;
}

.news-container-tow .user-info {
    width: 100%;
    overflow: hidden;
    padding-bottom: 20rpx;
}

.news-container-tow .user-info .avatar {
    float: left;
    width: 40rpx;
    height: 40rpx;
    overflow: hidden;
}

.news-container-one .user-info,.news-container-one .time {
    line-height: 40rpx;
}

.news-container-tow .user-info .user-info-name {
    padding-left: 10rpx;
    float: left;
}

.news-container-tow .news-cont {
    padding-top: 20rpx;
    width: 100%;
    overflow: hidden;
}

.news-container-tow .news-cont image {
    width: 100%;
    height: 180rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.news-container-tow .news-cont .title {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.news-container-tow .news-cont .desc {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.news-container-tow .tool-bar {
    position: relative;
    width: 100%;
    padding: 10rpx 0;
    overflow: hidden;
}

.news-container-tow .tool-bar .tool {
    display: inline-block;
    float: left;
    margin-right: 20rpx;
    line-height: 1;
}

.news-container-tow .tool-bar button {
    background-color: transparent;
}

.news-container-tow .tool-bar .tool.width {
    float: left;
}

.news-container-tow .tool-bar .tool .val {
    padding-left: 4rpx;
}