@import "../__wuBaseWxss__/0.wxss";

page {
    background-color: #fecfef;
}

.choose-box {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 20;
}

.choose-box .bg {
    width: 100%;
    height: 100%;
}

.choose-box .cont {
    position: fixed;
    width: 100%;
    left: 50%;
    top: 50%;
    z-index: 30;
    transform: translate(-50%,-50%);
    overflow: hidden;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.choose-box .cont .salesMan {
    margin-bottom: 90rpx;
}

.choose-box .cont .cont-img {
    width: 100%;
    height: 100%;
}