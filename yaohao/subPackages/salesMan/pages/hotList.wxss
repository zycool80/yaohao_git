@import "../__wuBaseWxss__/0.wxss";

page {
    background: #f7f7f7;
}

.search-bar {
    position: fixed;
    left: 0;
    width: 100%;
    height: 50px;
    box-sizing: border-box;
    padding: 8px 20rpx 0;
    background-color: #3772cc;
    z-index: 999;
}

.search-bar-form {
    background: #fff;
    line-height: 100%;
    color: #ccc;
    border-radius: 4px;
    position: relative;
    margin: 0 80rpx 20rpx;
    z-index: 1;
    overflow: hidden;
}

.search-bar-form .weui-search-bar__input {
    margin-left: 70rpx;
    margin-right: 70rpx;
    height: 100%;
    overflow: hidden;
    z-index: 0;
}

.search-bar-form .weui-icon-clear,.search-bar-form .weui-icon-search {
    width: 76rpx;
    height: 66rpx;
    line-height: 66rpx;
    text-align: center;
    font-size: 38rpx;
    color: #ccc;
    padding: 0;
}

.search-bar-form .search-bar-input {
    width: auto!important;
    margin: 0 76rpx;
    height: 66rpx;
    color: #666;
}

.search-bar-form .weui-icon-clear {
    position: relative;
    float: right;
    z-index: 2;
    left: 0;
}

.search-bar-form .weui-icon-search {
    position: relative;
    float: left;
    z-index: 2;
    right: 0;
    margin-right: 0;
}

.search-bar-form .searchClose {
    position: absolute;
    font-size: 32rpx;
    right: 24rpx;
    top: 22rpx;
    z-index: 55;
}

.search-bar .search-bar-icon {
    width: 70rpx;
    text-align: center;
    z-index: 2;
    line-height: 1;
    background-color: transparent;
    overflow: hidden;
}

.search-bar .float-left {
    float: left;
}

.search-bar .float-right {
    float: right;
}

.search-bar .search-bar-icon button.e_btn {
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0;
    background-color: transparent;
    font-size: 44rpx;
}

.search-bar .search-bar-icon text {
    line-height: 1;
}

.search-bar .search-bar-icon button::after {
    display: none;
}

.search-input-place {
    color: #ccc;
}

.search-bar .search-btn {
    float: right;
    height: 70rpx;
    width: 80rpx;
    line-height: 70rpx;
    text-align: center;
    padding-left: 15rpx;
}

.search-bar-form {
    margin: 0 10rpx 20rpx;
}

.search-bar-input {
    padding-left: 0;
}

.page__bd {
    margin-bottom: 0;
    overflow: hidden;
}

.hot-box {
    margin-top: 80rpx;
    padding: 30rpx 30rpx 0;
    box-sizing: border-box;
    overflow: hidden;
    height: 400rpx;
    background: linear-gradient(to bottom,#3772cc,#5da0fc);
}

.hot-box .head {
    overflow: hidden;
}

.hot-box .cont {
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    padding: 40rpx 0 0;
    position: relative;
}

.cont image {
    width: 620rpx;
    position: absolute;
}

.hot-box .cont .list {
    overflow: hidden;
}

.hot-box .cont .list.NO1 {
    padding: 0 20rpx;
    position: relative;
    top: -57rpx;
    left: 0;
}

.hot-box .cont .list.NO2 {
    padding: 0 20rpx;
    position: relative;
    top: -12rpx;
    left: 15rpx;
}

.hot-box .cont .list.NO3 {
    padding: 0 20rpx;
    position: relative;
    top: -22rpx;
    left: -20rpx;
}

.hot-box .cont .list .avatar {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    position: relative;
    width: 100%;
    text-align: center;
}

.hot-box .cont .list .avatar .bg {
    display: inline-block;
    position: absolute;
    top: 8rpx;
    z-index: 1;
    overflow: hidden;
}

.hot-box .cont .list.NO1 .avatar {
    width: 160rpx;
}

.hot-box .cont .list.NO2 .avatar {
    width: 150rpx;
}

.hot-box .cont .list.NO3 .avatar {
    width: 140rpx;
}

.hot-box .cont .list.NO1 .avatar .bg {
    width: 52rpx;
    height: 46rpx;
}

.hot-box .cont .list.NO2 .avatar .bg {
    width: 52rpx;
    height: 46rpx;
}

.hot-box .cont .list.NO3 .avatar .bg {
    width: 52rpx;
    height: 46rpx;
}

.hot-box .cont .list .avatar>view {
    position: relative;
    z-index: 2;
    width: 100%;
    border-radius: 100%;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,0.2);
    overflow: hidden;
    box-sizing: border-box;
    padding: 6rpx;
    background-color: #f2f2f2;
}

.hot-box .cont .list .avatar>view image {
    display: inline-block;
    width: 100%;
    height: 100%;
    border-radius: 100%;
    overflow: hidden;
    left: 0;
    top: 0;
}

.hot-box .cont .list.NO1 .avatar>view {
    margin-top: 26rpx;
    height: 160rpx;
    margin-bottom: 40rpx;
}

.hot-box .cont .list.NO2 .avatar>view {
    margin-top: 23rpx;
    height: 150rpx;
    margin-bottom: 40rpx;
}

.hot-box .cont .list.NO3 .avatar>view {
    margin-top: 20rpx;
    height: 140rpx;
    margin-bottom: 30rpx;
}

.hot-box .cont .list .name {
    width: 100%;
    text-align: center;
    height: 74rpx;
}

.hot-tab-box {
    padding-bottom: 138rpx;
    overflow: hidden;
    background: #f7f7f7;
}

.hot-tab-box .sales-man-title:before {
    height: 22rpx;
    width: 6rpx;
    content: '';
    display: inline-block;
    background: #5878e1;
    position: absolute;
    left: 30rpx;
    top: 34rpx;
}

.hot-tab-box .sales-man-title {
    padding: 28rpx 30rpx 34rpx 45rpx;
    position: relative;
}

.hot-tab-box .tab-list {
    width: 100%;
    height: 60rpx;
    margin-bottom: 10rpx;
    border-bottom: 4rpx solid #f2f2f2;
}

.hot-tab-box .tab-list .tab-list-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%;
    flex-direction: column;
    float: left;
}

.hot-tab-box .tab-list .tab-list-item .text {
    color: #999;
    line-height: 1;
    margin-bottom: 30rpx;
}

.hot-tab-box .tab-list .tab-list-item .line {
    background-color: transparent;
    height: 6rpx;
    width: 66rpx;
    overflow: hidden;
}

.hot-tab-box .tab-list .tab-list-item.active .text {
    color: #3772cc;
}

.hot-tab-box .tab-list .tab-list-item.active .line {
    background-color: #3772cc;
}

.hot-tab-box .tab-content {
    overflow: hidden;
}

.hot-tab-box .tab-content .item {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 224rpx;
}

.hot-tab-box .tab-content .user-content {
    width: 100%;
    margin-bottom: 20rpx;
    overflow: hidden;
    z-index: 1;
    background: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.hot-tab-box .tab-content .item .ranking {
    float: left;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 105rpx;
    width: 74rpx;
}

.hot-tab-box .tab-content .item .avatar {
    float: left;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 140rpx;
    height: 105rpx;
    position: relative;
}

.hot-tab-box .tab-content .item .avatar image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    overflow: hidden;
}

.NO1-color {
    color: #edcb40!important;
}

.NO2-color {
    color: #739ad3!important;
}

.NO3-color {
    color: #c99c4e!important;
}

.COM-color {
    color: #999!important;
}

.hot-tab-box .tab-content .item .userinfo {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 164rpx;
}

.hot-tab-box .tab-content .item .userinfo>view {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.hot-tab-box .tab-content .item .like-next {
    position: absolute;
    top: 20rpx;
    right: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    float: right;
    height: 164rpx;
    padding-right: 30rpx;
    text-align: right;
    z-index: 3;
}

.btn-group {
    position: fixed;
    background-color: #fff;
    overflow: hidden;
    bottom: 0;
    left: 0;
    z-index: 99;
    box-shadow: 0 0 15px rgba(0,0,0,0.3);
    width: 100%;
    box-sizing: border-box;
}

.btn-group .e_btn {
    height: 90rpx;
    border-radius: 0;
    width: 100%;
    text-align: center;
    line-height: 90rpx;
    background: linear-gradient(to right,#4677e7,#3753cc);
}

.wechat-phone {
    overflow: hidden;
}

.wechat-phone .left {
    display: inline-block;
}

.wechat-phone .phone,.wechat-phone .chat {
    padding-right: 52rpx;
}