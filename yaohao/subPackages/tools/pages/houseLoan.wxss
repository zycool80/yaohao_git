@import "../__wuBaseWxss__/0.wxss";

page {
    background: #f9fafc;
}

.top_switch_bar {
    overflow: hidden;
    background: #fff;
    box-shadow: 0 1rpx 8rpx 0 rgba(0,0,0,0.1);
    margin-bottom: 10rpx;
}

.top_switch_bar .bar {
    height: 120rpx;
    line-height: 120rpx;
    float: left;
    width: 33%;
    text-align: center;
}

.top_switch_bar .bar.active {
    color: #1e81dd;
    border-bottom: 4rpx solid #1f82dd;
}

.total-cont {
    padding: 0 30rpx;
    border-bottom: 1rpx solid #e2e2e2;
    background: #fff;
}

.total-cont .cont-line {
    height: 110rpx;
    line-height: 110rpx;
    border-bottom: 1rpx solid #e2e2e2;
    overflow: hidden;
}

.total-cont .cont-line .left {
    float: left;
}

.total-cont .cont-line .right {
    overflow: hidden;
    position: relative;
    text-align: right;
    margin-left: 150rpx;
}

.total-cont .cont-line .right .loanRatio {
    float: left;
    height: 54rpx;
    width: 80rpx;
    text-align: center;
    line-height: 54rpx;
    border-radius: 5rpx;
    border: 1rpx solid #e6e6e6;
    margin-top: 14px;
    margin-left: 10rpx;
}

.total-cont .cont-line .right .loanRatio.active {
    border: 1rpx solid #1e81dd;
    color: #1e81dd;
}

.total-cont .cont-line .right input {
    display: inline-block;
    position: absolute;
    text-align: right;
    right: 42rpx;
    top: 30rpx;
}

.total-cont .cont-line-bottom {
    padding-top: 30rpx;
    overflow: hidden;
}

.total-cont .cont-line-bottom .left {
    float: left;
}

.total-cont .cont-line-bottom .right {
    margin-left: 180rpx;
    position: relative;
}

.total-cont .cont-line-bottom .right .line-top-cont .inpVal {
    height: 80rpx;
    line-height: 80rpx;
    background: #f5f5f5;
    border-radius: 5rpx;
    width: 160rpx;
    text-align: right;
    display: inline-block;
    position: relative;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.total-cont .cont-line-bottom .right .line-top-cont .inpVal input {
    display: inline-block;
    width: 120rpx;
    position: absolute;
    top: 16rpx;
    left: -30rpx;
}

.total-cont .cont-line-bottom .right .line-bottom-cont {
    padding-top: 20rpx;
    padding-left: 20rpx;
}

.beginLoan {
    height: 92rpx;
    line-height: 92rpx;
    background: #1e81dd;
    border-radius: 5rpx;
    margin: 50rpx 30rpx;
    text-align: center;
}