page {
    height: 90%;
}

.popup {
    height: 100%;
    overflow: hidden;
}

.common-model {
    position: fixed;
    background: #fff;
    border-radius: 10rpx;
    width: 640rpx;
    z-index: 1000;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.model-tip {
    padding: 30rpx 0;
    text-align: center;
}

.model-text1 {
    padding-bottom: 50rpx;
}

.input-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15rpx 0;
}

.common-model-btn {
    display: flex;
    justify-content: space-around;
    border-top: 1rpx solid #e6e6e6;
    height: 90rpx;
}

.common-model-btn button {
    color: #16a5af;
}

.common-model-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    background: rgba(0,0,0,0.5);
    top: 0;
    z-index: 999;
}

.comment-box {
    max-height: 600rpx;
    padding: 0 50rpx;
    box-sizing: border-box;
}

@import "../__wuBaseWxss__/0.wxss";

page {
    background: #f7f7f7;
}

.inputval {
    margin-top: 20rpx;
    padding: 40rpx 30rpx;
    background: #fff;
    box-shadow: 0px 1px 1px #e6e6e6;
    position: relative;
    height: 680rpx;
}

.inputval textarea {
    width: 100%;
    height: 100%;
}

.rules {
    position: absolute;
    bottom: -60rpx;
}

.submit {
    position: fixed;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    box-shadow: 2rpx 0 8rpx 0 rgba(0,0,0,.1);
}

.submit button {
    height: 95rpx;
    line-height: 95rpx;
    border-radius: 0;
}

.comment-top {
    padding: 23rpx 30rpx;
    box-sizing: border-box;
    box-shadow: 2rpx 0 8rpx 0 rgba(0,0,0,.1);
}