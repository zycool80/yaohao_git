@import "../__wuBaseWxss__/0.wxss";

.layout_style {
    display: flex;
    align-items: center;
    justify-content: center;
}

#page {
    background-color: #3772cc;
}

#guide_header {
    position: relative;
    width: 100%;
    height: 384rpx;
}

#guide_header image {
    width: 100%;
    height: 226rpx;
    margin-top: -20rpx;
}

#guide_header #guide_header_text {
    position: absolute;
    left: 30rpx;
    top: 116rpx;
    width: 690rpx;
}

#guide_header #guide_header_text .font_title {
    font-size: 56rpx;
    font-weight: bold;
    display: block;
    color: #FFFFFF;
}

#guide_header #guide_header_text .guide_bottom_text .text_left {
    float: left;
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

#guide_header #guide_header_text .guide_bottom_text .text_left .text_left_btn {
    width: 58rpx;
    height: 58rpx;
    background-color: #FFFFFF;
    border-radius: 6rpx;
}

#guide_header #guide_header_text .guide_bottom_text .text_left .text_left_btn .text_left_yao {
    width: 34rpx;
    height: 34rpx;
    background-color: #316dc2;
    border-radius: 50%;
}

#guide_header #guide_header_text .guide_bottom_text .text_left .text_left_btn .text_left_yao text {
    font-size: 22rpx;
    font-weight: bold;
    color: #FFFFFF;
}

#guide_header #guide_header_text .guide_bottom_text .text_right {
    margin-top: -30rpx;
    float: right;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #FFFFFF;
}

#guide_header #guide_header_text .guide_bottom_text .text_right .fenxiang_btn {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    background-color: #f7776a;
}

#guide_content {
    padding: 10rpx 30rpx 100rpx 30rpx;
}

#guide_content #container_text {
    background-color: #FFFFFF;
    padding: 20rpx 20rpx 6rpx 20rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}

#guide_content #container_text .guide_item .prompt_box {
    position: relative;
    width: 650rpx;
    border: 1px solid #2934a0;
    border-radius: 10rpx;
    background-color: #f2f6ff;
    padding: 30rpx 0;
}

#guide_content #container_text .guide_item .prompt_box .prompt_box_top {
    display: flex;
    align-items: center;
    justify-content: center;
}

#guide_content #container_text .guide_item .prompt_box .prompt_box_top text {
    margin-left: 30rpx;
    margin-right: 20rpx;
    color: #2934a0;
}

#guide_content #container_text .guide_item .prompt_box .prompt_text {
    font-size: 28rpx;
    margin-left: 30rpx;
    margin-top: 10rpx;
}

#guide_content #container_text .guide_item .prompt_box .sanjiao {
    position: absolute;
    bottom: -26rpx;
    left: 50%;
    margin-left: -14rpx;
    width: 0;
    height: 0;
    border-top: 12px solid #2934a0;
    border-left: 14px solid transparent;
    border-right: 14px solid transparent;
}

#guide_content #container_text .guide_item .prompt_box .sanjiao2 {
    position: absolute;
    bottom: -24rpx;
    left: 50%;
    margin-left: -30rpx;
    width: 0;
    height: 0;
    border-top: 20px solid #f2f6ff;
    border-left: 22px solid transparent;
    border-right: 22px solid transparent;
}

.three_dian {
    width: 10rpx;
    height: 10rpx;
    background-color: #2934a0;
    border-radius: 50%;
    margin-left: 8rpx;
}

.tips_image {
    width: 100%;
    margin-top: 50rpx;
}

.foot_btn {
    width: 350rpx;
    height: 80rpx;
    border-radius: 8rpx;
    font-size: 30rpx;
    color: #FFFFFF;
}