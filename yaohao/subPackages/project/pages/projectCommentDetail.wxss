}

.contact {
    padding: 10rpx;
    border: 1rpx solid #0ea8b0;
    border-radius: 6rpx;
    display: inline-block;
    line-height: 1;
    background-color: #fff;
    margin: 0 8rpx;
}

.orange-color {
    color: #f7776a!important;
