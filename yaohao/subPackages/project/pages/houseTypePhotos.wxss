@import "../__wuBaseWxss__/0.wxss";

page {
    width: 100%;
    height: 100%;
    background-color: #000000;
}

.page {
    position: relative;
    height: 100%;
    box-sizing: border-box;
    display: -webkit-box;
    -webkit-box-pack: center;
    -webkit-box-orient: vertical;
}

.page .scroll-navbar {
    position: absolute;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 110rpx;
    padding: 40rpx 30rpx 0;
    box-sizing: border-box;
    background-color: rgba(0,0,0,0.5);
}

.scroll-navbar .navbar-container {
    display: -webkit-box;
    -webkit-box-orient: horizontal;
    overflow-x: auto;
}

.scroll-navbar .navbar-item {
    padding: 0 18rpx;
    line-height: 50rpx;
    height: 50rpx;
    margin-right: 40rpx;
    border-radius: 4rpx;
    background-color: transparent;
    color: #b8b8b8;
    overflow: hidden;
}

.scroll-navbar .navbar-item.active {
    color: #fff;
    background-color: #3d404b;
}

.swiper {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #000;
    white-space: nowrap;
    position: relative;
    z-index: 1;
}

.swiper .scroll_photos {
    height: 100%;
}

.swiper movable-view,.swiper movable-area {
    height: 100%;
    width: 100%;
}

.swiper image {
    width: 100%;
    height: 100%;
}

.swiper .swiper-item {
    float: left;
    height: 100%;
    background: #000;
    overflow: hidden;
}

.photosInfo {
    padding: 30rpx 0;
    position: absolute;
    bottom: 0;
    background: linear-gradient(to top,rgba(0,0,0,0.7) 0,transparent 90%);
    z-index: 222;
    width: 100%;
    text-align: center;
}

.photosInfo .bottom-text {
    padding: 0 30rpx 20rpx;
}