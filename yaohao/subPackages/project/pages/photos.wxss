@import "../__wuBaseWxss__/0.wxss";

page {
    background: #f7f7f7;
}

.scroll-view {
    overflow-x: scroll;
    border-bottom: 4rpx solid #f2f2f2;
}

.tabBar {
    display: -webkit-box;
    padding: 0 30rpx;
    min-width: 880rpx;
}

.tabBar .tabBar-list {
    margin-right: 35rpx;
    height: 94rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    color: #999;
    text-align: center;
    overflow: hidden;
}

.tabBar .tabBar-list.active {
    position: relative;
    color: #000!important;
}

.tabBar .tabBar-list.active .active-line {
    position: absolute;
    width: 100%;
    height: 6rpx;
    content: '';
    top: 88rpx;
    background-color: #000;
}

.tabBar .tabBar-list .top {
    font-size: 50rpx;
    margin-bottom: 10rpx;
}

.tabBar .tabBar-list .top,.tabBar .tabBar-list .bottom {
    line-height: 1;
}

.scroll-view {
    width: 100%;
}

.photos-content {
    margin: 30rpx;
    overflow: hidden;
}

.photos-upfile-line {
    text-align: right;
    padding: 15rpx 0;
}

.photos-upfile {
    border: 1px solid #999;
    border-radius: 8rpx;
    overflow: hidden;
    display: inline-block;
    width: 270rpx;
    height: 55rpx;
    line-height: 55rpx;
    text-align: center;
}

.photos-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.img-border {
    width: 48%;
    height: 280rpx;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
    padding: 10rpx;
    background: #fff;
    box-sizing: border-box;
}

.photos-list image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}