@import "manageUsers.wxss";

page {
    background-color: #f2f2f2;
}

picker {
    padding: 0 20rpx;
    box-sizing: border-box;
    height: 54rpx;
    line-height: 52rpx;
    text-align: center;
    border-radius: 27rpx;
}

.points .point-title {
    height: 240rpx;
    overflow: hidden;
    text-align: center;
    position: relative;
}

.points .point-title>image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
}

.points .point-title .mes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
}

.points .point-title .goldNum {
    line-height: 1;
    font-size: 60rpx;
    color: #fbee7c;
}

.points .point-title .recharge {
    position: absolute;
    top: 50%;
    margin-top: -30rpx;
    right: 30rpx;
    z-index: 4;
    font-size: 60rpx;
    width: 144rpx;
    height: 60rpx;
    border: 1px solid #fff;
    border-radius: 30rpx;
    line-height: 62rpx;
    text-align: center;
}

.points .point-title .self_introduce {
    position: absolute;
    top: 65rpx;
    left: 160rpx;
    z-index: 4;
}

.points .point-title .avatar {
    width: 104rpx;
    height: 104rpx;
    border: 1px solid #fff;
    border-radius: 100%;
    position: absolute;
    top: 50%;
    margin-top: -52rpx;
    left: 30rpx;
    z-index: 4;
}

.points .points-content {
    box-sizing: border-box;
}

.points .points-content .left {
    float: left;
}

.points .points-content .right {
    float: right;
}

.points .points-content .title {
    padding: 20rpx 30rpx;
    overflow: hidden;
    box-sizing: border-box;
}

.points .focus-option {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #e2e2e2;
    overflow: hidden;
    background-color: #ffffff;
    box-sizing: border-box;
}

.points .focus-option .option-color {
    margin: 25rpx auto 0;
    width: 60rpx;
    height: 6rpx;
}

.points .focus-option .color-style {
    background-color: #2d8cf0;
}

.points .focus-option .focus-option-item {
    padding-top: 24rpx;
    flex: 1;
    text-align: center;
}

.points .focus-option .gray-line {
    width: 2rpx;
    height: 42rpx;
    background-color: #e2e2e2;
}

.points .data-row {
    padding: 35rpx 30rpx;
    overflow: hidden;
    box-sizing: border-box;
    border-bottom: 1px solid #e2e2e2;
}

.points .data-row .row-left {
    float: left;
    vertical-align: middle;
}

.points .data-row .row-right {
    float: right;
    margin-top: 10rpx;
}

.noData {
    text-align: center;
}

.noData image {
    width: 600rpx;
    height: 300rpx;
    margin-top: 150rpx;
}

.noData view {
    margin-top: 10rpx;
}