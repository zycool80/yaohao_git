@import "manageUsers.wxss";

.myLottery {
    background-color: #f7f7f7;
    overflow: hidden;
}

.hot_house_list {
    padding: 20rpx 30rpx;
    position: relative;
    box-sizing: border-box;
    overflow: hidden;
    background-color: #fff;
    margin-bottom: 22rpx;
}

.hot_house_list .hot_house_img {
    float: left;
    width: 242rpx;
    height: 160rpx;
    margin-right: 20rpx;
    position: relative;
}

.hot_house_list .hot_house_img .lottery-img {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
    position: absolute;
    z-index: 1;
    top: 0;
}

.hot_house_list .hot_house_img .lottery-img-bottom {
    display: block;
    width: 34rpx;
    height: 106rpx;
    border-radius: 6rpx;
    position: absolute;
    z-index: 2;
    top: -5rpx;
    left: 10rpx;
}

.hot_house_list .hot_house_info {
    margin-left: 240rpx;
    overflow: hidden;
}

.hot_house_list .hot_house_info .title {
    width: 100%;
    margin-bottom: 18rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.hot_house_list .hot_house_info>.prise {
    margin-bottom: 18rpx;
}

.hot_house_list .hot_house_info .tags {
    overflow: hidden;
}

.hot_house_list .hot_house_info .tags .tip {
    line-height: 34rpx;
    padding: 0 10rpx;
    height: 36rpx;
    overflow: hidden;
    color: #1f9f55;
    background-color: #e6fbef;
    border: 0;
    display: inline-block;
    float: left;
    border-radius: 3rpx;
    margin-right: 10rpx;
}

.attention {
    position: absolute;
    right: 30rpx;
    top: 85rpx;
}

.title-top {
    padding: 30rpx;
    box-sizing: border-box;
}

.not_id_card {
    text-align: center;
    background-color: #fff;
}

.not_id_card image {
    margin-top: 300rpx;
    width: 200rpx;
}