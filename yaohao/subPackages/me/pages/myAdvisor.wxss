@import "manageUsers.wxss";

.salesMan {
    margin: 30rpx 30rpx;
    position: relative;
    z-index: 22;
}

.salesMan-content {
    border-right: 8rpx;
    position: relative;
    overflow: hidden;
    border-radius: 12rpx;
    box-shadow: 0 0 15rpx 5rpx rgba(0,0,0,0.2);
    padding: 30rpx 50rpx;
}

.salesMan-content>image.salesMan-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: -1;
}

.salesMan-content-left {
    width: 140rpx;
    height: 306rpx;
    float: left;
    text-align: center;
    flex-direction: column;
    justify-content: space-between;
    display: flex;
}

.salesMan .guanzhu {
    background: rgba(255,255,255,0.25);
    padding: 0 20rpx;
    border-radius: 50rpx;
    line-height: 50rpx;
    color: rgba(200,0,100,0.4);
    display: inline-block;
    margin: 30rpx 0;
    position: absolute;
    top: 170rpx;
    left: 62rpx;
    z-index: 55;
}

.salesMan-content-left .liulan {
    line-height: 1;
    padding-top: 105rpx;
}

.salesMan-content-left .liulan>text {
    display: block;
}

.salesMan-content-left .liulan>text:last-child {
    margin-top: 8rpx;
}

.salesMan-content-left .avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 140rpx;
    display: block;
    overflow: hidden;
}

.salesMan-content-left .avatar image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 140rpx;
    overflow: hidden;
}

.salesMan-content-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 190rpx;
    height: 306rpx;
}

.salesMan-content .paiming {
    position: absolute;
    right: 30rpx;
    top: 0;
    width: 72rpx;
    height: 98rpx;
}

.tel-btn {
    width: 40rpx;
    height: 40rpx;
    border-radius: 40rpx;
    background: #20aced;
    line-height: 40rpx;
    text-align: center;
}

.copy-and-msg-phone .contact>view {
    display: inline-block;
}

.salesMan .weixin .message {
    margin-right: 30rpx;
}

.salesMan .weixin .message,.salesMan .weixin .phone {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    overflow: hidden;
    box-sizing: border-box;
    border: 2rpx solid #fff;
    border-radius: 100%;
    text-align: center;
    background: transparent;
    display: inline-block;
}

.salesMan .copy-and-msg-phone {
    position: absolute;
    top: 178rpx;
    left: 240rpx;
    z-index: 99;
}

.salesMan-content-right>.name {
    line-height: 1;
    margin-bottom: 10rpx;
    margin-top: 20rpx;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
}

.salesMan-content-right>.name>view {
    padding: 0 20rpx 0 0;
    display: inline-block;
    max-width: 200rpx;
    overflow: hidden;
    word-wrap: break-word;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.address {
    line-height: 1;
    white-space: nowrap;
    width: 310rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 150rpx;
}

.contact>text:nth-child(2) {
    padding: 0 10rpx;
}

.liulan-huoyue {
    display: flex;
    justify-content: space-between;
    padding-right: 55rpx;
    overflow: hidden;
}

.person {
    width: 100%;
    height: 40rpx;
    overflow: hidden;
}

.person image {
    position: relative;
    display: inline-block;
    float: left;
    margin-left: -10rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 100%;
    box-sizing: border-box;
    border: 1px solid #fff;
}

.person image:first-child {
    margin-left: 0;
}

.salesMan .copy {
    position: absolute;
    right: 50rpx;
    top: 232rpx;
    padding: 0 20rpx;
    border: 1px solid #fff;
    border-radius: 5rpx;
    line-height: 36rpx;
    display: inline-block;
}

.salesMan .call {
    position: absolute;
    right: 50rpx;
    top: 164rpx;
    padding: 0 20rpx;
    border: 1px solid #fff;
    border-radius: 5rpx;
    line-height: 36rpx;
    display: inline-block;
}

.salesMan-top {
    padding: 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 55rpx;
}

.salesMan-top image {
    width: 35rpx;
    height: 35rpx;
    padding: 10rpx 0 10rpx 20rpx;
}

.nothing {
    box-sizing: border-box;
    padding: 200rpx 0 160rpx;
    text-align: center;
    background-color: #fff;
}

.question-container {
    overflow: hidden;
    padding: 30rpx 60rpx 50rpx;
    background-color: #fff;
}

.question-container .question-list {
    line-height: 80rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #fff;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    box-shadow: 0 0 10px 5px rgba(0,0,0,0.05);
    z-index: 99;
}

.footer .become {
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    display: inline-block;
    border-radius: 8rpx;
    width: 100%;
    background: #3772cc;
}

.font_size {
    font-size: 28rpx;
    color: #999;
}

.page-bg {
    background: #f7f7f7;
}