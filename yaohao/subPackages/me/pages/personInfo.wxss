@import "manageUsers.wxss";

page {
    background-color: #f7f7f7;
}

.personInfo {
    background: #f7f7f7;
    position: relative;
    z-index: 22;
}

.personInfo-btn {
    margin: 0 30rpx;
    line-height: 90rpx;
}

.personInfo-btn button {
    outline: none;
}

.personInfo-edit {
    background: #fff;
    position: relative;
    z-index: 25;
    width: 100%;
}

.personInfo-edit>view,.personInfo-edit>navigator {
    margin-left: 30rpx;
    line-height: 90rpx;
    padding: 10rpx 30rpx 10rpx 0;
    box-sizing: border-box;
    overflow: hidden;
}

.page .avatar {
    padding: 100rpx 30rpx 0;
    text-align: center;
}

.page .avatar image {
    display: block;
    margin: 0 auto;
    width: 176rpx;
    height: 176rpx;
    border-radius: 176rpx;
}

.personInfo-edit>view:not(.personInfo-sign),.personInfo-edit>navigator:not(.personInfo-sign) {
    border-bottom: 1rpx solid #e6e6e6;
}

.left {
    float: left;
    width: 136rpx;
    height: 90rpx;
    overflow: hidden;
    text-align: justify;
}

.left:after {
    content: "";
    display: inline-block;
    width: 100%;
}

.right {
    float: right;
}

.bd0 {
    border-bottom: 0 none!important;
}

.mandatory {
    position: absolute;
    right: -14rpx;
    top: -8rpx;
    color: #ee8888;
}

.personInfo-line {
    float: right;
    text-align: right;
    color: #1a1a1a;
    font-size: 30rpx;
    height: 100%;
    line-height: 90rpx;
}

.font-color {
    color: #666!important;
}

.personInfo-line1 {
    text-align: left;
    color: #1a1a1a;
    font-size: 28rpx;
    height: 90rpx;
    text-overflow: ellipsis;
    margin: 0 70rpx 0 170rpx;
    line-height: 90rpx;
    overflow: hidden;
}

.personInfo-sign text {
    width: 510rpx;
    word-wrap: break-word;
    white-space: normal;
    text-align: left;
    line-height: 1.6em;
    padding-top: 18rpx;
    overflow: hidden;
}

.personInfo-sign1 input {
    word-wrap: break-word;
    white-space: normal;
    text-align: left;
    line-height: 1.8em;
    width: 460rpx;
    overflow: hidden;
    padding-right: 45rpx;
}

.personInfo-img image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.personInfo-img1 image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.delete-btn {
    position: absolute;
    right: 30rpx;
    color: #ccc;
}

.border-bg {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
    background: #fafafa;
    padding: 5rpx;
}

.person-tip {
    margin: 0 30rpx;
    height: 160rpx;
    padding-top: 30rpx;
}

.person-tip view:nth-child(2) {
    text-indent: 2em;
}