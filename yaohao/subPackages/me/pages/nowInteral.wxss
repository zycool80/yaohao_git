@import "manageUsers.wxss";

page {
    background-color: #f7f7f7;
}

picker {
    padding: 0 20rpx;
    box-sizing: border-box;
    height: 50rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 25rpx;
    border: 1px solid #ccc;
}

.points .point-title {
    height: 154rpx;
    overflow: hidden;
    text-align: center;
    position: relative;
}

.points .point-title .mes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
}

.points .point-title image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
}

.points .points-content {
    padding: 46rpx 30rpx;
    box-sizing: border-box;
}

.points .points-content .left {
    float: left;
}

.points .points-content .right {
    float: right;
}

.points .points-content .title {
    margin-bottom: 34rpx;
}

.points .points-content .info {
    overflow: hidden;
}

.points .points-content .info .content {
    padding-top: 27rpx;
    overflow: hidden;
    box-sizing: border-box;
}

.points .points-content .info .tip {
    line-height: 82rpx;
    overflow: hidden;
    padding: 0 26rpx;
    box-sizing: border-box;
    font-weight: 700;
    border-bottom: 1px solid #f7f7f7;
}

.points .points-content .info .points-col {
    box-sizing: border-box;
    overflow: hidden;
    margin-bottom: 28rpx;
    padding: 0 30rpx;
}

.points .points-content .info .points-col .line {
    line-height: 50rpx;
}

.points .points-content .info .points-col .cicle {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    line-height: 50rpx;
    text-align: center;
    border-radius: 100%;
    background-color: #f7f7f7;
}

.points .points-content .info .points-col .cicle image {
    width: 28rpx;
    height: auto;
}

.noData {
    text-align: center;
}

.noData image {
    width: 600rpx;
    height: 300rpx;
    margin-top: 150rpx;
}

.noData view {
    margin-top: 10rpx;
}

.gr-color {
    color: #16a5af;
}

.rotate {
    transform: rotate(-180deg);
}