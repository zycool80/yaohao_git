@import "manageUsers.wxss";

page {
    background-color: #f7f7f7;
}

.page__bd>.title {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.list-box {
    overflow: hidden;
}

.list-box .w-cell {
    position: relative;
    padding-left: 30rpx;
    box-sizing: border-box;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}

.list-box .w-cell .left-key {
    float: left;
    width: 115rpx;
    font-weight: bold;
    overflow: hidden;
    height: 100rpx;
    text-align: justify;
}

.list-box .w-cell .left-key:after {
    content: "";
    display: inline-block;
    width: 100%;
}

.list-box .w-cell .right-value {
    margin-left: 160rpx;
    overflow: hidden;
    height: 100rpx;
    line-height: 100rpx;
}

.list-box .w-cell .right-value input {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.weui-cells__tips {
    line-height: 35rpx;
    margin-top: 30rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.weui-btn-area {
    margin: 0!important;
    padding: 1.17647059em 15px .3em!important;
    background-color: #fff!important;
}

.border-gray {
    border-top: 1px solid #e6e6e6;
}

button[type=primary] {
    background: linear-gradient(to right,#4677e7,#3753cc);
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 67rpx 30rpx 0;
    border-radius: 40rpx;
}