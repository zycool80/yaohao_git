@import "manageUsers.wxss";

page {
    background-color: #f7f7f7;
    height: 100%;
}

.myIDCard {
    width: 100%;
    height: 100%;
    position: relative;
}

.myIDCard .bgImg {
    width: 100%;
    position: absolute;
    z-index: 2;
    top: 0;
}

.myIDCard .content {
    width: 100%;
    position: absolute;
    z-index: 3;
    top: 30rpx;
    bottom: 0;
    box-sizing: border-box;
    padding: 0 30rpx 0 30rpx;
}

.myIDCard .content .contentList {
    border-radius: 6rpx;
    box-shadow: 1rpx 1rpx 12rpx 1rpx #e2e2e2;
    padding: 40rpx 40rpx 5rpx 40rpx;
    box-sizing: border-box;
    background-color: #fff;
    position: relative;
    margin-bottom: 20rpx;
}

.myIDCard .content .contentList .list-item {
    overflow: hidden;
    margin-bottom: 35rpx;
}

.myIDCard .content .contentList .list-item>text {
    float: left;
}

.myIDCard .content .contentList .list-item>view {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    max-width: 330rpx;
    margin-left: 160rpx;
}

.myIDCard .btn {
    position: fixed;
    bottom: 0;
    background-color: #fff;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    width: 100%;
    z-index: 99;
}

.myIDCard .addMsg {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 6rpx;
    text-align: center;
    background-color: #3772cc;
}

.myIDCard .line {
    position: absolute;
    left: 0;
    width: 10rpx;
    top: 80rpx;
    bottom: 80rpx;
}

.myIDCard .bg0 {
    background-color: #f7776a;
}

.myIDCard .bg1 {
    background-color: #f7b55e;
}

.myIDCard .bg2 {
    background-color: #16c295;
}

.myIDCard .bg3 {
    background-color: #4da9ea;
}

.myIDCard .attention {
    position: absolute;
    right: 30rpx;
    top: 40rpx;
    height: 48rpx;
    line-height: 50rpx;
    text-align: center;
    width: 122rpx;
    border-radius: 23rpx;
    border: 1px solid #808080;
}

.noContent {
    text-align: center;
}

.noContent image {
    width: 300rpx;
    height: 190rpx;
    margin-top: 390rpx;
}

.noContent .tip {
    margin: 50rpx 0 34rpx 0;
}

.notice {
    position: absolute;
    bottom: 100rpx;
    left: 30rpx;
    right: 30rpx;
}