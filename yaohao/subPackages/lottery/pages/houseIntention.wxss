.container {
    height: 100%;
    width: 100%;
    position: relative;
}

.slider-body {
    height: 2rpx;
    background-color: #ddd;
    position: relative;
}

.body {
    bottom: 60rpx;
    margin-left: 30rpx;
    background-color: #19896f;
    z-index: 0.3;
}

.left {
    bottom: 50rpx;
    z-index: 0.1;
    margin-right: 20rpx;
}

.right {
    z-index: 0.2;
    bottom: 70rpx;
    margin-left: 30rpx;
}

.slider-item {
    border-radius: 50%;
    width: 56rpx;
    height: 56rpx;
    border: 1px solid #eb734e;
    z-index: 99;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
}

.min {
    position: relative;
    top: 42rpx;
    left: 200rpx;
}

.max {
    position: relative;
    bottom: 16rpx;
    left: 600rpx;
}

._maxMove_item {
    display: flex;
    align-items: center;
    justify-content: center;
}

.shuxian {
    width: 1px;
    height: 20rpx;
    margin-right: 4rpx;
    background-color: #eb734e;
}

.hide {
    display: none;
}

@import "../__wuBaseWxss__/0.wxss";

.page {
    padding-bottom: 200rpx;
}

.orange-color {
    color: #eb744e!important;
}

.condition-option .option-unlimited {
    text-align: center;
    background: #fff;
    border-bottom: 10rpx solid #f7f7f7;
    overflow: hidden;
    height: 300rpx;
}

.condition-option .option-unlimited .title {
    padding: 60rpx 0 56rpx;
}

.condition-option .option-unlimited .text {
    padding-bottom: 34rpx;
}

.condition-option .option-unlimited .process-line {
    width: 540rpx;
    height: 10rpx;
    background: #eb744e;
    position: relative;
    display: inline-block;
    margin-bottom: 60rpx;
    border-radius: 10rpx;
}

.condition-option .option-unlimited .process-line .move-btn {
    width: 54rpx;
    height: 54rpx;
    line-height: 54rpx;
    border-radius: 54rpx;
    display: inline-block;
    text-align: center;
    position: absolute;
    border: 1rpx solid #eb744e;
    top: -20rpx;
    background: #fff;
}

.condition-option .option {
    padding: 0 30rpx;
    background: #fff;
    border-bottom: 10rpx solid #f7f7f7;
    overflow: hidden;
}

.condition-option .option .title {
    padding: 50rpx;
    text-align: center;
}

.condition-option .option .tags-list {
    padding-bottom: 10rpx;
}

.condition-option .option .tags-list .tag-txt {
    width: 160rpx;
    height: 48rpx;
    line-height: 46rpx;
    text-align: center;
    border-radius: 5rpx;
    margin-right: 16rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    display: inline-block;
}

.condition-option .option .tags-list .choosed {
    background: #eb744e;
    border: 1px solid #eb734e;
}

.condition-option .option .tags-list .not-choose {
    border: 1rpx solid #999;
}

.condition-option .option .tags-list>text:nth-child(4n+0) {
    margin-right: 0;
}

.submit {
    padding: 10rpx 30rpx;
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    box-shadow: 0 0 15rpx 0 rgba(0,0,0,0.3);
    background: #fff;
}

.submit .btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 8rpx;
    text-align: center;
}

.top {
    text-align: center;
}

.des {
    text-align: center;
}

.zy-slider {
    position: relative;
    margin: 60rpx;
    top: -120rpx;
}