@import "../__wuBaseWxss__/0.wxss";

.purIntention .bgImg {
    width: 100%;
}

.purIntention .left {
    float: left;
}

.purIntention .right {
    float: right;
}

.purIntention .content {
    padding: 0 30rpx;
    box-sizing: border-box;
}

.purIntention .content .title-top {
    overflow: hidden;
    margin: 20rpx 0 45rpx 0;
}

.purIntention .content .comment-list {
    padding: 25rpx 30rpx 5rpx 30rpx;
    box-sizing: border-box;
    box-shadow: 1rpx 1rpx 12rpx 1rpx #e3e1e1;
}

.purIntention .content .comment-list .comment-list-col {
    overflow: hidden;
    margin-bottom: 30rpx;
}

.purIntention .content .comment-list .comment-list-col .list-col-right {
    margin-left: 170rpx;
}

.purIntention .content .comment-list .comment-list-col .list-col-right>text {
    float: left;
    margin-right: 40rpx;
}

.btn {
    position: fixed;
    bottom: 0;
    background-color: #fff;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    width: 100%;
}

.addMsg {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 6rpx;
    text-align: center;
    background-color: #3772cc;
}

.noContent {
    text-align: center;
}

.noContent image {
    width: 300rpx;
    height: 190rpx;
    margin-top: 200rpx;
}

.noContent .tip {
    margin: 70rpx 0 34rpx 0;
}