@import "../__wuBaseWxss__/0.wxss";

page {
    background-color: #f7f7f7;
}

.page {
    padding-bottom: 200rpx;
}

.upload_title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    height: 70rpx;
}

.upload_title_text {
    font-size: 22rpx;
    color: #9d9d9d;
}

.upload_content {
    background-color: white;
    font-size: 24rpx;
    padding-left: 30rpx;
    height: 366rpx;
}

.pic_category {
    display: flex;
    align-items: center;
}

.upload_item {
    width: 100%;
    height: 90rpx;
}

.layout_style {
    display: flex;
}

.upload_item_opt {
    width: 100%;
    height: 100%;
    border-bottom: 1px solid #e6e6e6;
}

.upload_item_opt2 {
    width: 100%;
    padding-right: 30rpx;
    align-items: center;
    overflow: hidden;
}

.upload-file {
    clear: both;
    overflow: hidden;
    margin-top: 40rpx;
}

.upload-file>view {
    float: left;
    margin-right: 5rpx;
}

.upload-file .pic {
    width: 104rpx;
    height: 104rpx;
    box-sizing: border-box;
    margin-top: 10;
    border-radius: 4px;
    position: relative;
    margin-bottom: 60rpx;
    background: #f2f2f2 url(data:image/png;base64,) center / 20px no-repeat;
}

.upload-file .small-level-color {
    display: inline-block;
    width: 90rpx;
    text-align: center;
    font-size: 20rpx;
    margin-top: 4px;
}

.general_style3 {
    display: flex;
    justify-content: center;
    align-items: center;
}

.add_pic_tohouse {
    height: 82rpx;
    width: 100%;
    background-color: white;
    margin-top: 10rpx;
    font-size: 32rpx;
    font-weight: 700;
}

.general_style {
    display: flex;
    align-items: center;
}

.shizi_style {
    transform: rotate(45deg);
}

.last-bottom {
    padding: 10rpx 30rpx;
    box-shadow: 0 0 15rpx 0 rgba(0,0,0,0.3);
    position: fixed;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
}

.last-bottom .upFiles {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #3772cc;
    border-radius: 8rpx;
}