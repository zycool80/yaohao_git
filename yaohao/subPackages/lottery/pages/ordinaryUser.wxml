<view class="page">
    <view class="top-bg blue-bg"></view>
    <view class="top-self-info">
        <image class="avatar" src="{{user_info.avatar_url}}"></image>
        <view class="right">
            <view class="name">
                <text class="name-txt fz-14 black1a-color font-bold">{{user_info.nick_name}}</text>
                <text class="sign fz-11 small-level-color">{{user_info.city}}</text>
            </view>
            <view class="active-data fz-11 small-level-color">3分钟前活跃</view>
        </view>
    </view>
    <view class="title fz-14 black1a-color font-bold">我的购房意向</view>
    <view class="tags-box">
        <view class="tags-cont">
            <view class="cont-line">
                <view class="left fz-13 small-level-color">{{intention[0].title}}</view>
                <view class="right fz-13 black1a-color">
                    <text class="txt">{{intention[0].list}}</text>
                </view>
            </view>
            <view class="cont-line">
                <view class="left fz-13 small-level-color">{{intention[1].title}}</view>
                <view class="right fz-13 black1a-color">
                    <text class="txt" wx:for="{{intention[1].list}}" wx:key="key">{{item}}</text>
                </view>
            </view>
            <view class="cont-line">
                <view class="left fz-13 small-level-color">{{intention[2].title}}</view>
                <view class="right fz-13 black1a-color">
                    <text class="txt">{{intention[2].list}}</text>
                </view>
            </view>
            <view class="cont-line">
                <view class="left fz-13 small-level-color">{{intention[3].title}}</view>
                <view class="right fz-13 black1a-color">
                    <text class="txt" wx:for="{{intention[3].list}}" wx:key="key">{{item}}</text>
                </view>
            </view>
            <view class="cont-line">
                <view class="left fz-13 small-level-color">{{intention[4].title}}</view>
                <view class="right fz-13 black1a-color">
                    <text class="txt" wx:for="{{intention[4].list}}" wx:key="key">{{item}}</text>
                </view>
            </view>
        </view>
    </view>
</view>
