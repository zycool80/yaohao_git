@import "../__wuBaseWxss__/0.wxss";

.search-bar {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 50px;
    box-sizing: border-box;
    padding: 8px 20rpx 0;
    background-color: #3772cc;
    z-index: 999;
}

.search-bar-form {
    background: #fff;
    line-height: 100%;
    color: #ccc;
    border-radius: 4px;
    position: relative;
    margin: 0 80rpx 20rpx;
    z-index: 1;
    overflow: hidden;
}

.search-bar-form .weui-search-bar__input {
    margin-left: 70rpx;
    margin-right: 70rpx;
    height: 100%;
    overflow: hidden;
    z-index: 0;
}

.search-bar-form .weui-icon-clear,.search-bar-form .weui-icon-search {
    width: 76rpx;
    height: 66rpx;
    line-height: 66rpx;
    text-align: center;
    font-size: 38rpx;
    color: #ccc;
    padding: 0;
}

.search-bar-form .search-bar-input {
    width: auto!important;
    margin: 0 76rpx;
    height: 66rpx;
    color: #666;
}

.search-bar-form .weui-icon-clear {
    position: relative;
    float: right;
    z-index: 2;
    left: 0;
}

.search-bar-form .weui-icon-search {
    position: relative;
    float: left;
    z-index: 2;
    right: 0;
    margin-right: 0;
}

.search-bar .search-bar-icon {
    width: 70rpx;
    text-align: center;
    z-index: 2;
    line-height: 1;
    background-color: transparent;
    overflow: hidden;
}

.search-bar .float-left {
    float: left;
}

.search-bar .float-right {
    float: right;
}

.search-bar .search-bar-icon button.e_btn {
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0;
    background-color: transparent;
    font-size: 44rpx;
}

.search-bar .search-bar-icon text {
    line-height: 1;
}

.search-bar .search-bar-icon button::after {
    display: none;
}

.search-input-place {
    color: #ccc;
}

.search-bar-form {
    margin: 0 10rpx 20rpx;
}

.search-bar-input {
    padding-left: 0;
}

.search-bar .search-btn {
    float: right;
    height: 70rpx;
    width: 80rpx;
    line-height: 70rpx;
    text-align: center;
    padding-left: 15rpx;
}

.label {
    text-align: right;
    width: 250rpx;
    float: left;
    color: #888;
}

.row {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    font-size: 14px;
    position: relative;
    flex: 1;
}

.value {
    padding-left: 10px;
    margin-left: 250rpx;
}

.lottery-result {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #EEEEEE;
}

.show-code {
    padding-right: 15px;
    font-size: 16px;
}

.row .add {
    position: absolute;
    right: 15px;
    top: 8px;
    display: inline-block;
}

.column {
    overflow: hidden;
}