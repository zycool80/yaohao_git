page {
    height: 90%;
}

.popup {
    height: 100%;
    overflow: hidden;
}

.common-model {
    position: fixed;
    background: #fff;
    border-radius: 10rpx;
    width: 640rpx;
    z-index: 1000;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.model-tip {
    padding: 30rpx 0;
    text-align: center;
}

.model-text1 {
    padding-bottom: 50rpx;
}

.input-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15rpx 0;
}

.common-model-btn {
    display: flex;
    justify-content: space-around;
    border-top: 1rpx solid #e6e6e6;
    height: 90rpx;
}

.common-model-btn button {
    color: #16a5af;
}

.common-model-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    background: rgba(0,0,0,0.5);
    top: 0;
    z-index: 999;
}

.comment-box {
    max-height: 600rpx;
    padding: 0 50rpx;
    box-sizing: border-box;
}

@import "../__wuBaseWxss__/0.wxss";

@import "../__wuBaseWxss__/2.wxss";

page {
    background-color: #f7f7f7;
}

.page {
    padding-bottom: 150rpx;
}

.input_area {
    padding-bottom: 30rpx;
    position: relative;
    background-color: #fff;
    overflow: hidden;
}

.input_area textarea {
    z-index: 0;
    padding: 40rpx 67rpx;
    width: 100%;
    box-sizing: border-box;
    overflow-y: visible;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    width: 100%;
    box-shadow: 0 0 10px 5px rgba(0,0,0,0.05);
    z-index: 100;
}

.upForm {
    margin: 10rpx 30rpx;
    line-height: 73rpx;
    height: 73rpx;
    text-align: center;
    box-sizing: border-box;
    border: 1px solid #3772cc;
    color: #fff;
    background-color: #3772cc;
    border-radius: 8px;
}

.bottom-answer {
    position: relative;
    padding: 0 30rpx 30rpx 60rpx;
}

.addQuestion {
    padding: 30rpx 30rpx 30rpx 80rpx;
    margin-bottom: 10rpx;
    background: #fff;
}

.addQuestion .title {
    padding-bottom: 20rpx;
}

.sign-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.avatar {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    margin-right: 30rpx;
    float: left;
}

.avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.wantAnswer {
    color: #16A5AF;
    background: #EAF9FA;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0 16rpx;
    border-radius: 44rpx;
}

.sign-text-bg {
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 12rpx;
    background: #E9F0FA;
    border-radius: 8rpx;
    margin-right: 10rpx;
    display: inline-block;
}

.upload-file {
    clear: both;
    margin-top: 20rpx;
    overflow: hidden;
    padding: 0 20rpx;
}

.upload-file>view {
    float: left;
    margin-right: 5rpx;
}

.upload-file .pic {
    width: 80rpx;
    height: 80rpx;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
    position: relative;
    margin-bottom: 60rpx;
    background: #fff url(data:image/png;base64,) center / 25px no-repeat;
}

.upload-file .small-level-color {
    display: inline-block;
    width: 90rpx;
    text-align: center;
    font-size: 20rpx;
    margin-top: 4px;
}

.rules {
    color: #5a6ca0;
    height: 58rpx;
    line-height: 58rpx;
    padding: 0 24rpx;
    border-radius: 4rpx;
    background: #f2f5f6;
    border: 1rpx solid #e5e6e8;
    position: absolute;
    bottom: 20rpx;
    left: 30rpx;
}

.number {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    border-radius: 8px;
}