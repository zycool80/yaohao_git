@import "../__wuBaseWxss__/0.wxss";

page {
    background-color: #f7f7f7;
}

@import "../__wuBaseWxss__/2.wxss";

.question-head {
    width: 100%;
    padding: 25rpx 30rpx;
    line-height: 1;
    box-sizing: border-box;
    overflow: hidden;
}

.question-head .fz-14 {
    float: left;
}

.question-head .right {
    float: right;
    line-height: 30rpx;
}

.question-type-select {
    width: 100%;
    padding: 30rpx 30rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.question-type-select .select-list {
    line-height: 44rpx;
    padding: 0 16rpx;
    border-radius: 6rpx;
    float: left;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    border: 1px solid #fff;
    background-color: #fff;
    color: #666;
}

.question-type-select .select-list.active {
    color: #3772cc;
    border-color: #3772cc;
}

.nothing-text {
    line-height: 200rpx;
}

.nothing-text,.getToQuestion {
    text-align: center;
}

.cont_box {
    padding: 30rpx 30rpx 30rpx 70rpx;
}

.question-desc {
    padding-right: 0;
}

.cont_top>view {
    display: inline-block;
}

.cont_top .avatar {
    margin-right: 15rpx;
    float: left;
}

.cont_top .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
}

.cont_top .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.user-name,.user-info {
    line-height: 60rpx;
}

.cont_top .avatar .exportLog {
    position: absolute;
    left: 66rpx;
    top: 76rpx;
    width: 70rpx;
}

.yellow-color {
    color: #926a25!important;
}

.exportContImg {
    position: relative;
    padding-top: 20rpx;
}

.exportContImg image {
    width: 100%;
}

.exportContImg .lookCont {
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 60rpx;
    padding: 0 48rpx;
    border: 1rpx solid #926a25;
    position: absolute;
    left: 180rpx;
    top: 100rpx;
}

.cont_top .answer_top {
    display: flex;
    justify-content: space-between;
    align-items: center;
}