@import "../__wuBaseWxss__/0.wxss";

page {
    background: #f7f7f7;
}

.page {
    padding-bottom: 300rpx;
}

.tab-bar {
    position: fixed;
    top: 0;
    left: 0;
    overflow: hidden;
    display: flex;
    width: 100%;
    z-index: 25;
    background: #fff;
}

.tab-bar .tabname {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-bottom: 4rpx solid #f7f7f7;
    text-align: center;
    position: relative;
}

.tab-bar .tabname.active:after {
    border: 4rpx solid #3772cc;
    width: 60rpx;
    content: "";
    line-height: 0;
    display: inline-block;
    position: absolute;
    bottom: -1rpx;
    left: 40%;
}

.myDiscuss-date {
    color: #1a1a1a;
    padding-bottom: 40rpx;
}

.myDiscuss-content {
    margin-bottom: 20rpx;
}

.typeTab {
    padding: 0 15rpx;
    line-height: 42rpx;
    height: 42rpx;
    margin-right: 10rpx;
    background-color: #fff;
    border-radius: 8rpx;
    display: inline-block;
}

.typeLise .active {
    border: 1rpx solid #3772cc;
}

.typeLise {
    padding: 130rpx 0 30rpx;
}

.list-content {
    padding: 0 30rpx;
}

.left-content .img {
    float: left;
    margin: 30rpx 0 0 10rpx;
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
}

.left-content image {
    width: 100%;
    height: 100%;
    display: inline-block;
    border-radius: 50rpx;
}

.right-content {
    margin-left: 65rpx;
    background-color: #fff;
    border-radius: 8rpx;
    padding: 30rpx;
}

.right-content .content {
    padding: 25rpx 0;
}

.right-content .name {
    line-height: 1;
}

.hot-topic .liulan {
    float: right;
    width: 130rpx;
}

.hot-topic-left {
    margin-right: 10rpx;
}

.hot-topic-left .buyHouse {
    margin-right: 10rpx;
    background-color: #e2ecfb;
    padding: 0 20rpx;
    line-height: 36rpx;
    border-radius: 8rpx;
    display: inline-block;
    height: 36rpx;
}

.right-btn {
    padding: 30rpx 0 0;
    position: relative;
    line-height: 1;
}

.right-btn .right-btn-text {
    margin-left: 10rpx;
}

.right-btn .good {
    right: 40rpx;
}

.right-btn .comment {
    right: 140rpx;
}

.right-btn .share {
    right: 0;
    background: transparent;
    line-height: 1;
}

.right-btn .attention {
    right: 240rpx;
}

.good,.share,.comment,.attention {
    position: absolute;
    display: inline-block;
}

.nothing-text {
    line-height: 800rpx;
}

.nothing-text,.getToQuestion {
    text-align: center;
}

.wantAnswer {
    color: #16A5AF;
    background: #EAF9FA;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0 16rpx;
    border-radius: 44rpx;
    float: right;
}

.hot-topic {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.right-content .right-top {
    display: flex;
    justify-content: space-between;
    align-content: flex-start;
    line-height: 1;
    align-items: center;
}

.right-content .other {
    color: #b3b3b3;
    position: relative;
    top: -15rpx;
}