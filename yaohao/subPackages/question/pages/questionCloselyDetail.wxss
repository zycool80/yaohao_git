@import "../__wuBaseWxss__/0.wxss";

@import "../__wuBaseWxss__/2.wxss";

page {
    background-color: #f7f7f7;
}

.page {
    padding-bottom: 150rpx;
}

.input_area {
    padding-bottom: 30rpx;
    position: relative;
    background-color: #fff;
    overflow: hidden;
}

.input_area textarea {
    padding: 40rpx 67rpx;
    width: 100%;
    box-sizing: border-box;
    overflow-y: visible;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    width: 100%;
    box-shadow: 0 0 10px 5px rgba(0,0,0,0.05);
    z-index: 100;
}

.upForm {
    margin: 10rpx 30rpx;
    line-height: 73rpx;
    height: 73rpx;
    text-align: center;
    box-sizing: border-box;
    border: 1px solid #3772cc;
    color: #fff;
    background-color: #3772cc;
    border-radius: 8px;
}

.input_area .number {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    border-radius: 8px;
}

.bottom-answer {
    position: relative;
    padding: 0 30rpx 30rpx 60rpx;
}

.addQuestion {
    padding: 30rpx 30rpx 30rpx 80rpx;
    background: #fff;
}

.addQuestion .title {
    padding-bottom: 20rpx;
}

.sign-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.avatar {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    margin-right: 30rpx;
    float: left;
}

.avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.wantAnswer {
    color: #16A5AF;
    background: #EAF9FA;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0 16rpx;
    border-radius: 44rpx;
}

.sign-text-bg {
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 12rpx;
    background: #E9F0FA;
    border-radius: 8rpx;
    margin-right: 10rpx;
    display: inline-block;
}

.upload-file {
    clear: both;
    margin-top: 20rpx;
    overflow: hidden;
    padding: 0 20rpx;
}

.upload-file>view {
    float: left;
    margin-right: 5rpx;
}

.upload-file .pic {
    width: 80rpx;
    height: 80rpx;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
    position: relative;
    margin-bottom: 60rpx;
    background: #fff url(data:image/png;base64,) center / 25px no-repeat;
}

.upload-file .small-level-color {
    display: inline-block;
    width: 90rpx;
    text-align: center;
    font-size: 20rpx;
    margin-top: 4px;
}