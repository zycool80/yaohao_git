@import "../__wuBaseWxss__/0.wxss";

.search-bar {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 50px;
    box-sizing: border-box;
    padding: 8px 20rpx 0;
    background-color: #3772cc;
    z-index: 999;
}

.search-bar-form {
    background: #fff;
    line-height: 100%;
    color: #ccc;
    border-radius: 4px;
    position: relative;
    margin: 0 80rpx 20rpx;
    z-index: 1;
    overflow: hidden;
}

.search-bar-form .weui-search-bar__input {
    margin-left: 70rpx;
    margin-right: 70rpx;
    height: 100%;
    overflow: hidden;
    z-index: 0;
}

.search-bar-form .weui-icon-clear,.search-bar-form .weui-icon-search {
    width: 76rpx;
    height: 66rpx;
    line-height: 66rpx;
    text-align: center;
    font-size: 38rpx;
    color: #ccc;
    padding: 0;
}

.search-bar-form .search-bar-input {
    width: auto!important;
    margin: 0 76rpx;
    height: 66rpx;
    color: #666;
}

.search-bar-form .weui-icon-clear {
    position: relative;
    float: right;
    z-index: 2;
    left: 0;
}

.search-bar-form .weui-icon-search {
    position: relative;
    float: left;
    z-index: 2;
    right: 0;
    margin-right: 0;
}

.search-bar .search-bar-icon {
    width: 70rpx;
    text-align: center;
    z-index: 2;
    line-height: 1;
    background-color: transparent;
    overflow: hidden;
}

.search-bar .float-left {
    float: left;
}

.search-bar .float-right {
    float: right;
}

.search-bar .search-bar-icon button.e_btn {
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0;
    background-color: transparent;
    font-size: 44rpx;
}

.search-bar .search-bar-icon text {
    line-height: 1;
}

.search-bar .search-bar-icon button::after {
    display: none;
}

.search-input-place {
    color: #ccc;
}

@import "../__wuBaseWxss__/2.wxss";

page {
    background-color: #f7f7f7;
}

.search-bar-form {
    margin: 0 10rpx 20rpx;
}

.search-bar-input {
    padding-left: 0;
}

.history {
    padding: 30rpx 30rpx 10rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.history:last-child {
    border-bottom: none;
}

.head {
    overflow: hidden;
    padding: 30rpx 0;
}

.head .float-left {
    float: left;
}

.hot-search {
    display: inline-block;
    background: #3772cc;
    border-top-right-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 27rpx;
}

.head .float-right {
    float: right;
}

.list {
    overflow: hidden;
    padding: 0 44rpx;
}

.list .tags {
    line-height: 1;
    padding: 15rpx 25rpx;
    margin: 0 20rpx 20rpx 0;
    background: #f7f7f7;
    border-radius: 30rpx;
    float: left;
    font-size: 26rpx;
}

.not_id_card {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 1000rpx;
    width: auto;
    background-color: #fff;
}

.search-bar .search-btn {
    float: right;
    height: 70rpx;
    width: 80rpx;
    line-height: 70rpx;
    text-align: center;
    padding-left: 15rpx;
    background: transparent;
}

.adoption {
    background-color: #f7f7f7;
    padding: 0 20rpx;
    line-height: 40rpx;
    border-radius: 40rpx;
    display: inline-block;
    height: 40rpx;
    color: #16a5af;
    margin-left: 50rpx;
}

.orange-color {
    color: #f7776a;
}

.nothing-text {
    line-height: 200rpx;
}

.nothing-text,.getToQuestion {
    text-align: center;
}

.search-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #e5e5e5;
    height: 90rpx;
    line-height: 90rpx;
    padding-right: 30rpx;
}

.search-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.user-info,.avatar {
    display: inline-block;
}

.tip-bg {
    background-color: #3772cc;
    position: fixed;
    left: 0;
    top: 0rpx;
    width: 100%;
    box-sizing: border-box;
    z-index: 999;
}

.title-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.title-top-left {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.title-top-left .avatar {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    margin-right: 30rpx;
}

.title-top-left .avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.top-question {
    padding: 25rpx 30rpx 30rpx 60rpx;
    box-sizing: border-box;
    position: relative;
}

.attention {
    float: right;
    position: relative;
    top: -15rpx;
}

.attention .guanzhu {
    height: 40rpx;
    padding: 0 15rpx;
    line-height: 40rpx;
    border: 1rpx solid #3772cc;
    border-radius: 33rpx;
    color: #3772cc;
    display: inline-block;
}

.attention .yiguanzhu {
    height: 40rpx;
    padding: 0 15rpx;
    line-height: 40rpx;
    background: #f7f7f7;
    border-radius: 15rpx;
    display: inline-block;
    color: #666;
}

.attention .other {
    padding-left: 25rpx;
    color: #b3b3b3;
}

.sign-text-bg {
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 12rpx;
    background: #E9F0FA;
    border-radius: 8rpx;
    margin-right: 10rpx;
    display: inline-block;
}

.view-num {
    margin-right: 40rpx;
}

.wantAnswer {
    color: #16A5AF;
    background: #EAF9FA;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0 16rpx;
    border-radius: 44rpx;
    float: right;
}

.sign-text {
    float: left;
}

.tips {
    position: absolute;
    left: -10rpx;
    top: 45rpx;
    padding: 0 18rpx;
    height: 34rpx;
    color: #fff;
    border-radius: 0 34rpx 34rpx 0;
}

.sign-line,.question-user-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0;
}

.haveSearchBar {
    padding-top: 100rpx;
}