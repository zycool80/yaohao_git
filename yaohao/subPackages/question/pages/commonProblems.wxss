@import "../__wuBaseWxss__/0.wxss";

.problems_header {
    position: relative;
}

.problems_header image {
    width: 100%;
    height: 400rpx;
}

.problems_header .problems_title {
    position: absolute;
    left: 0;
    top: 0;
    color: #FFFFFF;
    width: 100%;
}

.problems_header .problems_title .problems_title_top {
    margin-left: 84rpx;
    padding-top: 30rpx;
}

.problems_header .problems_title .problems_title_top .title_describe {
    margin-top: 10rpx;
    width: 298rpx;
}

.problems_header .problems_title .problems_title_top text:first-child {
    font-size: 56rpx;
    font-weight: 700;
    display: block;
}

.problems_header .problems_title .problems_title_bottom {
    margin-top: 170rpx;
}

.problems_header .problems_title .problems_title_bottom image {
    float: left;
    width: 60rpx;
    height: 60rpx;
    margin-left: 30rpx;
}

.problems_header .problems_title .problems_title_bottom .share_btn_content {
    float: right;
    margin-right: 30rpx;
    margin-top: -54rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.problems_header .problems_title .problems_title_bottom .share_btn_content .share_btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    background-color: #f7b55e;
}

.problems_content {
    margin-top: 50rpx;
    background-color: #f7f7f7;
}

.problems_content .problems_content_details {
    margin-top: 20rpx;
    padding: 30rpx;
    background-color: #FFFFFF;
    overflow: hidden;
}

.problems_content .problems_content_details .problems_details_top {
    display: flex;
    align-items: center;
    justify-content: center;
    float: left;
    width: 52rpx;
    height: 52rpx;
    border-radius: 50%;
    background-color: #628de7;
    color: #FFFFFF;
    font-weight: bold;
    font-size: 30rpx;
}

.problems_content .problems_content_details .problems_details_bottom {
    margin-left: 68rpx;
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
}

.problems_content .problems_content_details .problems_details_bottom .title_text {
    font-size: 30rpx;
    font-weight: bold;
    margin-top: 8rpx;
    margin-bottom: 20rpx;
}

.problems_content .problems_content_details .problems_details_bottom text {
    line-height: 38rpx;
}