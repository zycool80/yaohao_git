@import "../__wuBaseWxss__/0.wxss";

page {
    background-color: #fff;
}

.page {
    width: 100%;
    overflow: hidden;
}

.discuss-list-container {
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
}

.discuss-list-container .discuss-list-list {
    display: block;
    position: relative;
    height: 320rpx;
    box-sizing: border-box;
    margin: 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.discuss-list-container .discuss-list-list .bg {
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
}

.discuss-list-container .discuss-list-list .title,.discuss-list-container .discuss-list-list .bottom {
    width: 100%;
    padding: 0 30rpx;
    z-index: 3;
    box-sizing: border-box;
}

.discuss-list-container .discuss-list-list .title {
    position: relative;
    display: -webkit-box;
    margin-top: 90rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    padding-right: 80rpx;
}

.discuss-list-container .discuss-list-list .symbol {
    position: absolute;
    left: 30rpx;
    top: 44rpx;
    width: 32rpx;
    height: 27rpx;
    z-index: 2;
}

.discuss-list-container .discuss-list-list .bottom {
    position: absolute;
    bottom: 40rpx;
    left: 0;
}

.discuss-list-container .discuss-list-list .shadow-bg {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.discuss-list-container .discuss-list-list.style0 {
    box-shadow: 0 8rpx 21rpx 0 rgba(10,149,163,0.46);
}

.discuss-list-container .discuss-list-list.style1 {
    box-shadow: 0 8rpx 21rpx 0 rgba(97,124,171,0.46);
}

.discuss-list-container .discuss-list-list.style2 {
    box-shadow: 0 8rpx 21rpx 0 rgba(87,170,144,0.46);
}

.discuss-list-container .discuss-list-list.style3 {
    box-shadow: 0 8rpx 21rpx 0 rgba(169,153,91,0.46);
}

.discuss-list-container .discuss-list-list.style0 .shadow-bg {
    background: linear-gradient(to right,rgba(10,149,163,0.9),rgba(10,149,163,0.8) 40%,rgba(10,149,163,0.1));
}

.discuss-list-container .discuss-list-list.style1 .shadow-bg {
    background: linear-gradient(to right,rgba(97,124,171,0.9),rgba(97,124,171,0.8) 40%,rgba(97,124,171,0.1));
}

.discuss-list-container .discuss-list-list.style2 .shadow-bg {
    background: linear-gradient(to right,rgba(87,170,144,0.9),rgba(87,170,144,0.9) 40%,rgba(87,170,144,0.1));
}

.discuss-list-container .discuss-list-list.style3 .shadow-bg {
    background: linear-gradient(to right,rgba(169,153,91,0.9),rgba(169,153,91,0.9) 40%,rgba(169,153,91,0.1));
}